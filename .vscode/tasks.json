{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "rc",
			"command": "rc.exe",
			"args": [
				"${workspaceFolder}\\src\\resource.rc"
			],
			"options": {
				"cwd": "${workspaceFolder}\\src"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"detail": "编译RC资源。"
		},
		{
			"type": "shell",
			"label": "cl",
			"command": "cl.exe",
			"args": [
				"/c",
				"/GF",
				"/O2",
				"/EHsc",
				"/D",
				"NDEBUG",
				"/D",
				"_WINDOWS",
				"/D",
				"_UNICODE",
				"/D",
				"UNICODE",
				"/Fe:",
				"${workspaceFolder}\\src\\ef2.obj",
				"${workspaceFolder}\\src\\ef2.cpp"
			],
			"options": {
				"cwd": "${workspaceFolder}\\src"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"detail": "编译代码文件而不链接。",
			"dependsOn": [
				"rc"
			]
		},
		{
			"type": "shell",
			"label": "link",
			"command": "link.exe",
			"args": [
				"${workspaceFolder}\\src\\ef2.obj",
				"${workspaceFolder}\\src\\resource.res"
			],
			"options": {
				"cwd": "${workspaceFolder}\\src"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"detail": "链接生成二进制文件",
			"dependsOn": [
				"cl"
			]
		},
		{
			"type": "shell",
			"command": "Remove-Item",
			"args": [
				"${workspaceFolder}\\src\\*",
				"-Include",
				"*.obj,",
				"*.pdb,",
				"*.exe.manifest,",
				"*.res"
			],
			"detail": "清理临时文件",
			"label": "clean",
			"problemMatcher": [],
			"dependsOn": [
				"link"
			]
		},
		{
			"label": "Build",
			"dependsOn": [
				"clean"
			],
			"detail": "编译入口，依次编译资源、代码，进行链接，并清理中间文件",
			"group": {
				"kind": "build",
				"isDefault": true
			},
		},
		{
			"type": "typescript",
			"tsconfig": "typescript/tsconfig.json",
			"problemMatcher": [
				"$tsc"
			],
			"detail": "编译ts模块",
			"label": "tsc"
		}
	]
}